<%#
<h1>Interviewee#index</h1>
<p>Find me in app/views/interviewee/index.html.erb</p>
%>
<div class="interviewee_home_body">
  <nav class="nav_bar_interviewee_page">
    <span class="the_hunt_logo_span">
      <a href="/interviewee/index"><%= image_tag('the_hunt.png',class: "the_hunt_logo",width: "80",height:
      "80") %>
    </span>
    <span class="the_hunt_logo_text"> The Hunt </span></a>
    
    <span class="nav_items nav_item_home"> Home </span> 
    
    <a href="/interviewee/list_jobs">
      <span class="nav_items nav_item_job"> Find a Job </span>
    </a>
    <a href="/page/reviews">
    <span class="nav_items nav_item_interviews_scheduled">
      Reviews  
    </span>
    </a>
    <span class="nav_items">
      <% if current_user %>
      <div class="dropdown">
        <span>
          <%= image_tag('image.png',class: "user_image",onclick: "dropdwn()" )
          %>
        </span>

        <div class="dropdown-content" id="dropdown-content">
          <div class="dropbtn_btn">
            <button class="dropbtn">
              <%= image_tag('profile1.jpg',class: "profile_image") %><%=
              current_user.user_name %>
            </button>
          </div>
          <div>
            <span class="logout_content">
              <%= link_to "Log Out", logout_path, data: {confirm: 'You will be logged out?'}, class: "logout_button" %>
            </span>
          </div>
        </div>
      </div>
      <% else %> <%= link_to "LogIn", login_path %> <% end %>
    </span>
  </nav>

  <div class="interviewee_page_content">
    <p>Find the most</p>
    <p>exciting jobs</p>
    <p>waiting for you.</p>
  </div>

  <form action="/search_job" method="get">
    <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>"
    />
    <div class="search_box_car_listing_page_div">
      <input
        type="search"
        name="q"
        id=""
        placeholder="Search by job tittle, company name or location"
        class="search_box_car_listing_page"
      />
      <input type="submit" value="Search Jobs" class="apply_filter_button" />
    </div>
  </form>
</div>

<script>
  function dropdwn() {
    document.getElementById("dropdown-content").style.display = "block";
  }

  window.onclick = function (e) {
    if (!e.target.matches(".user_image")) {
      var myDropdown = document.getElementById("dropdown-content");
      if ((myDropdown.style.display = "block")) {
        myDropdown.style.display = "none";
      }
    }
  };
</script>
