<div class="job_details_main_div">
    <div class="job_details_heading">
      Job Details
    </div>
    <div class="job_tittle_div">
        <span> <strong>Job Tittle:</strong> <%= @job.job_tittle %></span> 
    </div>
    <div class="job_tittle_div manger_name_show">
        <span> <strong>Manager:</strong> <%= @job.manager_name %></span> 
    </div>
    <div class="eligibility_company_country_main_div">
        <span> <strong>Eligibility/Qualification: </strong><%= @job.eligibility %></span>
        <span><strong>Company: </strong> <%= @job.company_name %></span>
        <span><strong>Location: </strong> <%= @job.country %></span>
    </div>
    <div class="job_tittle_div manger_name_show about_job_heading">
     <strong> About Job: </strong>
    </div>
    <div class="about_job_div">
        <span> <%= @job.about_job %></span>
    </div>
    <a href="/interviewee/application_form/<%= params[:id] %>">
    <div class="apply_button button_slide slide_right">
        Apply This Job
      </div>
      </a>
    
</div>



<script>
  function dropdwn() {
    document.getElementById("dropdown-content").style.display = "block";
  }

  window.onclick = function (e) {
    if (!e.target.matches(".user_image")) {
      var myDropdown = document.getElementById("dropdown-content");
      if ((myDropdown.style.display = "block")) {
        myDropdown.style.display = "none";
      }
    }
  };
</script>